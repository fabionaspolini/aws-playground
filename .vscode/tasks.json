{
    "version": "2.0.0",
    "tasks": [
        // Geral
        {
            "label": "build-solution",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AwsPlayground.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        // DynamoDb
        {
            "label": "build-dynamoDb",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/services/dynamodb/src/DynamoDbPlayground.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // Lambda / context-details
        {
            "label": "build-lambda-context-details",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/services/lambda/src/context-details/ContextDetails.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-lambda-context-details",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "lambda",
                "deploy-function",
                "--function-name",
                "context-details",
                "--function-role",
                "context-details-lambda",
                "--tracing-mode",
                "Active"
            ],
            "options": {
                "cwd": "${workspaceFolder}/services/lambda/src/context-details"
            },
            "problemMatcher": "$msCompile"
        },
        // Lambda / simple-function
        {
            "label": "build-lambda-simple-function",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/services/lambda/src/simple-function/SimpleFunction.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-lambda-simple-function",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "lambda",
                "deploy-function",
                "--function-name",
                "simple-function",
                "--function-role",
                "simple-function-lambda",
                "--tracing-mode",
                "Active"
            ],
            "options": {
                "cwd": "${workspaceFolder}/services/lambda/src/simple-function"
            },
            "problemMatcher": "$msCompile"
        },
        // Lambda / simple-function-aot
        {
            "label": "build-lambda-simple-function-aot",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/services/lambda/src/simple-function-aot/SimpleFunctionAot.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-lambda-simple-function-aot",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "lambda",
                "deploy-function",
                "--function-name",
                "simple-function-aot",
                "--function-role",
                "simple-function-aot-lambda",
                "--tracing-mode",
                "Active"
            ],
            "options": {
                "cwd": "${workspaceFolder}/services/lambda/src/simple-function-aot"
            },
            "problemMatcher": "$msCompile"
        },
        // Lambda / simple-function-no-reflection
        {
            "label": "build-lambda-simple-function-no-reflection",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/services/lambda/src/simple-function-no-reflection/SimpleFunctionNoReflection.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-lambda-simple-function-no-reflection",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "lambda",
                "deploy-function",
                "--function-name",
                "simple-function-no-reflection",
                "--function-role",
                "simple-function-no-reflection-lambda",
                "--tracing-mode",
                "Active"
            ],
            "options": {
                "cwd": "${workspaceFolder}/services/lambda/src/simple-function-no-reflection"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}